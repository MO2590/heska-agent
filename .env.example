# Heska Agent Configuration
# Copy this file to .env and fill in your actual values

# API Keys
SHARPE_API_KEY=your_sharpe_narratives_api_key_here
LUNARCRUSH_API_KEY=your_lunarcrush_api_key_here

# Telegram Bot Settings
# Create a bot via @BotFather on Telegram to get these
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# Agent Behavior
SCAN_INTERVAL_MINUTES=5
SOCIAL_THRESHOLD=1000

# Chains to Monitor (comma-separated)
CHAINS=solana

# X (Twitter) API Settings (optional)
# Get these from https://developer.twitter.com/
X_API_KEY=your_x_api_key_here
X_API_SECRET=your_x_api_secret_here
X_ACCESS_TOKEN=your_x_access_token_here
X_ACCESS_TOKEN_SECRET=your_x_access_token_secret_here
X_BEARER_TOKEN=your_x_bearer_token_here

# Enable X Posting (set to true to post findings to X)
ENABLE_X_POSTING=false
